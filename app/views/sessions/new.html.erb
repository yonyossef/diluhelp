<h1 align="center">כניסה למורשי עריכה</h1>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
<div class="form-group">
  <div class="control-label col-sm-2">
    <%= f.label "דואר אלקטרוני" %>
  </div>
  <div class="col-sm-8">
    <%= f.email_field :email, class: "form-control", placeholder: "דואר אלקטרוני", autofocus: true %>
  </div>
</div>

<div class="form-group">
  <div class="control-label col-sm-2">
    <%= f.label "סיסמא" %>
  </div>
  <div class="col-sm-8">
    <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit "כניסה למורשים", class: 'btn btn-primary btn-lg' %>
  </div>
</div>
<% end %>

<div class="col-xs-4 col-xs-offset-4">
  [ <%= link_to "חזור", root_path %> ]
</div>