.container {
  position: relative;
  width: 100%;
  max-width: 800px;
  margin:auto;
  align-items: center;
  display: flex;
  // height: 300px;
  justify-content: center;
}

.container img {
  width: 100%;
  // height: auto;
}

.container .btn {
  background-color: white;
  color: #246c97;
  border-width: 3px;
  border-style: solid;
  border-color: #6d7f97;
  cursor: pointer;
  border-radius: 50%;
  text-align: center;
  font-size: 28px;
  height: 300px;
  width: 300px;
  //padding: 56px 56px;
}

.container .start_btn {
  background: url(<%= asset_path('diluhelp.png') %>);
  cursor:pointer;
  border:none;
  height: 300px;
  width: 300px;
}

@media (max-width: 768px) {
  .container .btn {
    font-size: 18px;
    height: 150px;
    width: 150px;
  }
  
  .container .start_btn {
    background: url(<%= asset_path('diluhelp-sm.png') %>);
    height: 250px;
    width: 250px;
  }
}

.container .btn:hover {
  background-color: #85caf3;
}


#plot, #plot_results {
  font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
  margin: auto;
}

#plot td, #plot th, #plot_results td, #plot_results th {
  border: 1px solid #ddd;
  font-size: 26px;
  padding: 12px;
}

@media (max-width: 768px) {
    #plot td, #plot th, #plot_results td, #plot_results th {
    border: 1px solid #ddd;
    font-size: 16px;
    padding: 8px;
  }
}

#plot tr:nth-child(even){background-color: #f2f2f2;}
#plot tr:nth-child(odd){background-color: #ffffff;}
#plot_results tr:nth-child(even){background-color: #f2f2f2;}
#plot_results tr:nth-child(odd){background-color: #ffffff;}

#plot tr:hover {background-color: #ddd;}
#plot_results tr:hover {background-color: #ddd;}

#plot th, #plot_results th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: right;
  background-color: #4CAF50;
  color: white;
}

.ideal0 { background:green; color:white }
.ideal1 { background:lightgreen }
.ideal2 { background:yellow }
.ideal3 { background:orange }
.ideal4 { background:red }
